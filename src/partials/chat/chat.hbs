<div class="chat__block">
  <div class= "content-holder {{{contentClass}}}" >
    <div class="avatar-parent">
      <div class="avatar"></div>
    </div>
    <div class="message-parent">
      <h2 class="user-name">{{userName}}</h2>
      <p class="text-message">{{lastMessage}}</p>
    </div>
    <div class="info">
      <div class = "date">
        {{dateTime}}
      </div>
      <div class="new-messages-num {{{isUnread}}}">
        {{unredAmount}}
      </div>
    </div>
  </div>
</div>
