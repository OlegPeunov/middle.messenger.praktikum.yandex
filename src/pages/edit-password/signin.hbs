{{{headerBlock}}}
<main class="popup popup_type_signin">
  <div class="popup__content">
    <div class="popup__title">Смена пароля</div>
    <form class="popup__form popup__form_type_password" novalidate id="validateRform">
      <div>
        <p class="popup__input-title">Старый пароль</p>
        {{{inputPasswordOld}}}
        {{{errPlacePasswordOld}}}
        <p class="popup__input-title">Новый пароль</p>
        {{{inputPassword}}}
        {{{errPlacePassword}}}
      </div>
      <div>
        {{{passwordButton}}}
      </div>
    </form>
  </div>
</main>
