/* eslint-disable */


.profile{
  margin: 0 auto;
  max-width: 510px;
}

.prfile__img-block{
  width: 100%;
  margin-bottom: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-value{
  font-family: 'Inter';
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  color: #999999;
}

.user-img{
  background-color: #EFEFEF;
  width: 130px;
  height: 130px;
  border-radius: 50%;
  margin-top: 60px;
  margin-bottom: 20px;
  transition: opacity 0.3s ease-in;
  /* background: url('../../../static/images/north_cat.svg') no-repeat; */
}

.user-img:hover{
  opacity: 0.6;
  transition: opacity 0.3s ease-in;
}

.sub-name{
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 16px;
  line-height: 16px;
  color: black;
}

.profile__info-block{
  width: 100%;
  margin-bottom: 60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile__item{
  height: 33px;
  width: 100%;
  border-bottom: solid 1px #EAEAEA;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-info{
  font-family: 'Inter';
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  color: #1E1E1E;
}

.profile__buttons-block{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.profile-btn{
  font-family: 'Inter';
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  display: block;
  margin: auto 0;
  text-decoration: none;
  color: blue;
}

.exit-btn{
  font-family: 'Inter';
  border: none; 
  outline: none;
  background-color: transparent;
  cursor: pointer;
  font-weight: 500;
  font-size: 13px;
  line-height: 13px;
  display: block;
  margin: 10px auto 0 0;
  padding: 0;
  text-decoration: none;
  color: red;
}

/* eslint-enable */
