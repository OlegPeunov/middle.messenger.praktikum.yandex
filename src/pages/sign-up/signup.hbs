      <div>
        {{{signUpButton}}}
        {{!-- <button id="popup-button-signup" class="popup__button" disabled >Авторизоваться</button> --}}
        <p class="popup__no-account">
        <a class="popup__no-account popup__no-account_link" id="no-account" href="#">Войти</a></p>
      </div>
    </form>
  </div>
  <script type='module' type="text/javascript" src="./index.ts"></script> 
</main>
